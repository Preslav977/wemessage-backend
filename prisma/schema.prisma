generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int       @id @default(autoincrement())
  first_name         String
  last_name          String
  username           String    @unique
  password           String
  confirm_password   String
  bio                String?
  profile_picture    String
  background_picture String
  status             Boolean   @default(false)
  user_role          Role      @default(USER)
  user_chats         Chat[]
  user_messages      Message[]
  user_groups        Group[]

  @@map("user")
}

enum Role {
  USER
  ADMIN
  GUEST
}

model Chat {
  id            String    @id @default(uuid())
  chat_users    User[]
  chat_messages Message[]
  chat_groups   Group[]

  @@map("chat")
}

model Message {
  id             Int      @id @default(autoincrement())
  message_text   String
  message_image  String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  message_users  User[]
  message_chats  Chat[]
  message_groups Group[]

  @@map("message")
}

model Group {
  id             String    @id @default(uuid())
  group_name     String    @unique
  group_users    User[]
  group_chats    Chat[]
  group_messages Message[]

  @@map("group")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
